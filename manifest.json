{
  "name": "Is Following Me on Github?",
  "version": "1.0.0",
  "description": "See if a github user is following you, while on their github page.",
  "background": { "scripts": ["background.js"] },
  "content_scripts": [
    { "matches": ["https://github.com/*"], "js": ["content.js"], "css": ["styles.css"] }
  ],
  "permissions": [
    "tabs",
    "https://api.github.com/*"
  ],
  "manifest_version": 2
}
